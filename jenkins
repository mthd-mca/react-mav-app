pipeline {
    agent any

    environment {
        IMAGE_NAME = "675711/react-swarm-app"
        DOCKERHUB_CREDENTIALS = "dockerhub"
       }

    stages {

        stage("Clone from GitHub") {
            steps {
  
                git branch: "main",
                    url: "https://github.com/mthd-mca/react-mav-app.git"
            }
        }

        stage("Install Node Dependencies") {
            steps {
            
                sh "npm install"
            }
        }

        stage("Build React Application") {
            steps {
                echo "Building React production files..."
                sh "npm run build"
            }
        }

        stage("Build Docker Image") {
            steps {
     
                script {
                    dockerImage = docker.build("${IMAGE_NAME}:latest")
                }
            }
        }

        stage("Push Image to DockerHub") {
            steps {
              
                script {
                    docker.withRegistry("", DOCKERHUB_CREDENTIALS) {
                        dockerImage.push("latest")
                    }
                }
            }
        }

       

        stage("Verify Deployment") {
            steps {
                echo "Verifying Swarm service..."

                sh """
                    docker service ls
                    docker service ps 
                """
            }
        }
    }

    post {
        success {
            echo "React CI/CD Pipeline Executed Successfully on Docker Swarm"
        }
        failure {
            echo "Pipeline Failed"
        }
    }
}
